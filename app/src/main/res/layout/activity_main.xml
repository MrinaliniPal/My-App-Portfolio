<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.udacity.myappportfolio.MainActivity"
    android:background="#d0dcd7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodegree Apps!"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#38555c" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPOTIFY STREAMER"
            android:id="@+id/button"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:layout_alignRight="@+id/button2"
            android:layout_alignEnd="@+id/button2"
            android:textColor="#fff"
            android:onClick="Click1"
            android:background="#f08c35" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORES APP"
            android:id="@+id/button2"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:layout_alignRight="@+id/button3"
            android:layout_alignEnd="@+id/button3"
            android:textColor="#fff"
            android:onClick="Click2"
            android:background="#f08c35"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIBRARY APP"
            android:id="@+id/button3"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button2"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4"
            android:layout_alignRight="@+id/button4"
            android:layout_alignEnd="@+id/button4"
            android:textColor="#fff"
            android:onClick="Click3"
            android:background="#f08c35"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUILD IT BIGGER"
            android:id="@+id/button4"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button3"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5"
            android:layout_alignRight="@+id/button5"
            android:layout_alignEnd="@+id/button5"
            android:textColor="#fff"
            android:onClick="Click4"
            android:background="#f08c35"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACON READER"
            android:id="@+id/button5"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button4"
            android:layout_alignLeft="@+id/button6"
            android:layout_alignStart="@+id/button6"
            android:layout_alignRight="@+id/button6"
            android:layout_alignEnd="@+id/button6"
            android:textColor="#fff"
            android:onClick="Click5"
            android:background="#f08c35"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAPSTONE: MY OWN APP"
            android:id="@+id/button6"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button5"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:onClick="Click6"
            android:background="#ffed254a"/>
    </RelativeLayout>
</ScrollView>
